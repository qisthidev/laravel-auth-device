{
    "name": "qisthidev/laravel-auth-device",
    "description": "Laravel package for device-based authentication. Users authenticate using registered devices without passwords and access is granted through admin invitations.",
    "keywords": [
        "qisthidev",
        "laravel",
        "auth-device",
        "authentication",
        "device",
        "invitation"
    ],
    "homepage": "https://github.com/qisthidev/laravel-auth-device",
    "license": "MIT",
    "authors": [
        {
            "name": "Qisthidev",
            "email": "author@domain.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-package-tools": "^1.14",
        "illuminate/contracts": "^12.0",
        "illuminate/support": "^12.0",
        "illuminate/auth": "^12.0",
        "illuminate/database": "^12.0",
        "illuminate/notifications": "^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Qisthidev\\AuthDevice\\": "src",
            "Qisthidev\\AuthDevice\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Qisthidev\\AuthDevice\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest --no-coverage",
        "test-coverage": "vendor/bin/pest --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Qisthidev\\AuthDevice\\AuthDeviceServiceProvider"
            ],
            "aliases": {
                "AuthDevice": "Qisthidev\\AuthDevice\\AuthDeviceFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
